{
  "ng42.redux": {
    "redux create a const of action types": {
      "prefix": "ngr-at-map",
      "body": [
        "export const ActionTypes = {",
        "\t${1:action}:\t\t\ttype('[${2:store}] $1'),$0",
        "};"
      ]
    },
    "redux create and action type": {
      "prefix": "ngr-at",
      "body": [
        "${1:action}:\t\t\ttype('[${2:store}] $1'),$0"
      ]
    },
    "redux create action class": {
      "prefix": "ngr-action",
      "body": [
        "export class ${1:type}Action implements Action {",
        "\ttype = ActionTypes.$1;",
        "",
        "\tconstructor(public payload: ${2:type}) { }",
        "}$0"
      ]
    },
    "redux create reducer switch": {
      "prefix": "ngr-reducer",
      "body": [
        "export function reducer(state = initialState, action: ${1:stateType}.Actions): State {",
        "\tswitch (action.type) {",
        "\t\tcase $1.ActionTypes.${2:action}: {",
        "\t\t\treturn Object.assign({}, state, action.payload);",
        "\t\t}",
        "",
        "$\t\t0",
        "\t\tdefault: {",
        "\t\t\treturn state;",
        "\t\t}",
        "\t}",
        "}"
      ]
    },
    "redux create reducer case": {
      "prefix": "ngr-reducer-case",
      "body": [
        "case $1.ActionTypes.${2:action}: {",
        "\treturn Object.assign({}, state, action.payload);",
        "}$0"
      ]
    }

  }
}
