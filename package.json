{
    "name": "ng-fortytwo-vscode-extension",
    "displayName": "NG.42 TS Helpers",
    "description": "Adds snippets, create barrel commands, and scafolding for ngRx.",
    "icon": "../images/NG-42-logo.svg",
    "version": "0.0.1",
    "publisher": "ng.42",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:ngFortyTwoCode.createBarrelFolders",
        "onCommand:ngFortyTwoCode.createBarrelFiles",
        "onCommand:ngFortyTwoCode.createBarrelAll"
    ],
    "main": "./out/src/ngFortyTwoCode",
    "contributes": {
      "menus": {
        "explorer/context": [{
          "command": "ngFortyTwoCode.createBarrelFolders",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }, {
          "command": "ngFortyTwoCode.createBarrelFiles",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }, {
          "command": "ngFortyTwoCode.createBarrelAll",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }]
      },
      "commands": [{
          "command": "ngFortyTwoCode.createBarrelFolders",
          "title": "Create Barrel (Folders)"
      }, {
          "command": "ngFortyTwoCode.createBarrelFiles",
          "title": "Create Barrel (Files)"
      }, {
          "command": "ngFortyTwoCode.createBarrelAll",
          "title": "Create Barrel (All)"
      }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
